<?xml version="1.0"?>
<odoo>
    <record id="estate_property_view_form" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="EstateForm">
                <sheet>
<!--                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>-->
                    <div class="oe_title">
                        <h1 class="mb32">
                            <field name="name" class="mb16"/>
                        </h1>
                    </div>
                    <div class="d-flex">
                        <group class="flex-grow-1">
                            <field name="postcode"/>
                            <field name="date_availability"/>
                        </group>
                        <group class="flex-grow-1">
                            <field name="expected_price"/>
                            <field name="selling_price"/>
                        </group>
                    </div>
                    <notebook >
                        <page string="Description">
                            <group class="ml16">
                                <field name="bedrooms"/>
                                <field name="living_area"/>
                                <field name="facades"/>
                                <field name="garage"/>
                                <field name="garden"/>
                                <field name="garden_area"/>
                                <field name="garden_orientation"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="estate_property_view_tree" model="ir.ui.view">
        <field name="name">estate.property.tree</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree string="Basic_Info">
                <field name="name"/>
                <field name="postcode"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="date_availability"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="estate_property_view_search" model="ir.ui.view">
        <field name="name">estate.property.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="estate_search">
                <field name="name"/>
                <field name="postcode"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="date_availability"/>
                <field name="state"/>
                                <filter string="Order" name="state"
                        domain="['|',('state', '=', 'new'), ('state', '=', 'offer_received')]"/>
                <group expand="1" string="Group By">
                    <filter string="Postcode" name="postcode"
                            context="{'group_by':'postcode', 'residual_visible':True}"/>
                </group>

            </search>
        </field>
    </record>

    <record id="estate_model_action" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">tree,form</field>
    </record>

        <record id="estate_property_type_action" model="ir.actions.act_window">
        <field name="name">Settings</field>
        <field name="res_model">estate.property.type</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>